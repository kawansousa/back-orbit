<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <title>OS</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.4;
            background-color: #f5f5f5;
            padding: 20px;
            font-size: 12px;
        }

        .page {
            background-color: white;
            width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            padding: 30px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .invoice-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #333;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .invoice-header img {
            max-height: 60px;
            max-width: 120px;
        }

        .company-info h1 {
            color: #333;
            font-size: 24px;
            margin-bottom: 5px;
        }

        .company-info p {
            color: #666;
            font-size: 14px;
        }

        .invoice-details {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
            gap: 30px;
        }

        .client-info,
        .sale-info {
            flex: 1;
        }

        .client-info h3,
        .sale-info h3 {
            color: #333;
            margin-bottom: 10px;
            font-size: 16px;
        }

        .client-info p,
        .sale-info p {
            margin-bottom: 5px;
            color: #555;
        }

        .section-title {
            color: #333;
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 15px;
            margin-top: 30px;
        }

        .invoice-items {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .invoice-items th,
        .invoice-items td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .invoice-items th {
            background-color: #f8f8f8;
            font-weight: bold;
        }

        .parcelas {
            width: 50%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        .parcelas th,
        .parcelas td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .parcelas th {
            background-color: #f8f8f8;
            font-weight: bold;
        }

        .status-concluida {
            color: #28a745;
            font-weight: bold;
        }

        .status-pendente {
            color: #ffc107;
            font-weight: bold;
        }

        .observacoes {
            margin-top: 20px;
            padding: 15px;
            background-color: #f9f9f9;
            border-left: 4px solid #007bff;
        }

        .observacoes h3 {
            margin-bottom: 10px;
            color: #333;
        }

        .footer {
            margin-top: 40px;
            text-align: center;
            border-top: 1px solid #ddd;
            padding-top: 20px;
        }

        .footer img {
            max-width: 100%;
            height: auto;
        }

        @media print {
            body {
                background: white;
                padding: 0;
            }
            
            .page {
                box-shadow: none;
            }
        }
    </style>
</head>

<body>
    <div class="page">
        <div class="invoice-header">
            <div>
                <% if (logo) { %>
                    <img src="<%= logo %>" alt="Logo">
                <% } %>
            </div>
            <div class="company-info">
                <h1>Comprovante de Venda</h1>
                <p>Loja: <%= os.codigo_loja %> | Empresa: <%= os.codigo_empresa %></p>
            </div>
        </div>

        <div class="invoice-details">
            <div class="client-info">
                <h3>Informações do Cliente</h3>
                <% if (os.cliente) { %>
                    <p><strong>Nome:</strong> <%= os.cliente.nome %></p>
                    <p><strong>CPF:</strong> <%= os.cliente.cpf %></p>
                <% } else if (os.cliente_sem_cadastro && os.cliente_sem_cadastro.nome) { %>
                    <p><strong>Nome:</strong> <%= os.cliente_sem_cadastro.nome %></p>
                <% } %>
            </div>
            <div class="sale-info">
                <h3>Detalhes da Venda</h3>
                <p><strong>Código da OS:</strong> <%= os.codigo_os %></p>
                <p><strong>Status:</strong> 
                    <span class="status-<%= os.status %>">
                        <%= os.status === 'concluida' ? 'Concluída' : 'Pendente' %>
                    </span>
                </p>
            </div>
        </div>

        <h3 class="section-title">Itens</h3>
        <table class="invoice-items">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Descrição</th>
                    <th>Qtd</th>
                    <th>Preço Unit.</th>
                    <th>Desconto</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% os.itens.forEach(item => { %>
                    <tr>
                        <td><%= item.codigo_produto %></td>
                        <td><%= item.descricao %></td>
                        <td><%= item.quantidade %></td>
                        <td>R$ <%= item.preco_unitario.toFixed(2) %></td>
                        <td><%= item.desconto_percentual %>% (R$ <%= item.desconto_valor.toFixed(2) %>)</td>
                        <td>R$ <%= item.total_unitario.toFixed(2) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <h3 class="section-title">Serviços</h3>
        <table class="invoice-items">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Descrição</th>
                    <th>Qtd</th>
                    <th>Preço</th>
                    <th>Desconto</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% os.servicos.forEach(serv => { %>
                    <tr>
                        <td><%= serv.codigo_servico %></td>
                        <td><%= serv.descricao %></td>
                        <td><%= serv.quantidade %></td>
                        <td>R$ <%= serv.preco.toFixed(2) %></td>
                        <td><%= serv.desconto_percentual %>% (R$ <%= serv.desconto_valor.toFixed(2) %>)</td>
                        <td>R$ <%= serv.total_servico.toFixed(2) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <% if (os.parcelas && os.parcelas.length > 0) { %>
            <h3 class="section-title">Parcelas</h3>
            <table class="parcelas">
                <thead>
                    <tr>
                        <th>Valor</th>
                        <th>Data de Vencimento</th>
                    </tr>
                </thead>
                <tbody>
                    <% os.parcelas.forEach(parcela => { %>
                        <tr>
                            <td>R$ <%= parcela.valor_total.toFixed(2) %></td>
                            <td><%= new Date(parcela.data_vencimento).toLocaleDateString('pt-BR') %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>

        <% if (os.observacoes) { %>
            <div class="observacoes">
                <h3>Observações</h3>
                <p><%= os.observacoes %></p>
            </div>
        <% } %>

        <div class="footer">
            <img src="<%= rodape %>" alt="Rodapé">
        </div>
    </div>
</body>

</html>